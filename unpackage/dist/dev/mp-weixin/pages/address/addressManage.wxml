<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['addressData']]]]]}}" value="{{addressData.name}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['addressData']]]]]}}" value="{{addressData.phone}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">地址选择</text><view data-event-opts="{{[['tap',[['chooseLocation',['$event']]]]]}}" class="input" bindtap="__e"><text style="background:#FA436A;color:#FFFFFF;padding:2px 4px;border-radius:5px;"><text class="yticon icon-dizhi"></text>{{''+addressName+''}}</text></view></view><view class="row b-b"><text class="tit">地址</text><input class="input" type="text" placeholder="可编辑" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','address','$event',[]],['addressData']]]]]}}" value="{{addressData.address}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">详细地址</text><input class="input" type="text" placeholder="小区名、楼层号、门牌" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','home_number','$event',[]],['addressData']]]]]}}" value="{{addressData.home_number}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.state}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>