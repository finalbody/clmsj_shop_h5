<view class="wrap"><view class="list"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item"><view class="hd"><image class="img" src="{{item.original_img}}" mode="aspectFill" data-event-opts="{{[['tap',[['previewImg',['$0'],[[['list','',index,'original_img']]]]]]]}}" bindtap="__e"></image><view class="col"><view class="title">{{item.title}}</view><view class="price">{{"¥"+item.price}}</view><block wx:if="{{item.state==0||item.state==1}}"><view class="state">审核中</view></block><block wx:if="{{item.state==2}}"><view class="state">通过</view></block><block wx:if="{{item.state==3}}"><view class="state">拒绝</view></block></view></view><view class="ft"><block wx:if="{{item.state==3}}"><view data-event-opts="{{[['tap',[['refuseReason',['$0',index],[[['list','',index]]]]]]]}}" class="btn" bindtap="__e">原由</view></block><view data-event-opts="{{[['tap',[['delItem',['$0',index],[[['list','',index]]]]]]]}}" class="btn" bindtap="__e">删除</view></view></view></block></view><block wx:if="{{nomore}}"><view class="nomore">没有更多了</view></block></view>